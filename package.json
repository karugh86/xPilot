{
  "name": "xpilot",
  "private": true,
  "version": "0.1.0",
  "workspaces": [
    "apps/*",
    "packages/*",
    "prisma"
  ],
  "scripts": {
    "dev": "pnpm -C apps/web dev",
    "build": "pnpm -C apps/web build":"prisma generate --schema=../../prisma/schema.prisma && prisma migrate deploy --schema=../../prisma/schema.prisma && next build"
,
    "start": "pnpm -C apps/web start",
    "prisma:deploy": "prisma migrate deploy",
    "prisma:push": "prisma db push",
    "generate": "prisma generate"
  },
  "devDependencies": {
    "prisma": "^5.20.0",
    "tsx": "^4.19.0"
  }
}
